{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-else-return": [
            "error"
        ],
        "array-bracket-spacing": [
            "error",
            "always",
            { "singleValue": false }
        ],
        "brace-style": [
            "error",
            "1tbs"
        ]
    }
}